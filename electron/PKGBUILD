# Maintainer: Your Name <your.email@example.com>
pkgname=my-electron-app
pkgver=1.0.0
pkgrel=1
pkgdesc="A simple Electron app"
arch=('x86_64')
url="https://example.com"
license=('MIT')
depends=('electron')
source=("index.js" "tray-icon.png")
sha256sums=('SKIP' 'SKIP')

package() {
  mkdir -p "$pkgdir/usr/share/$pkgname"
  mkdir -p "$pkgdir/usr/bin"

  # Copy files to the package directory
  cp "$srcdir/index.js" "$pkgdir/usr/share/$pkgname/"
  cp "$srcdir/tray-icon.png" "$pkgdir/usr/share/$pkgname/"

  # Create a launcher script
  echo "#!/bin/bash" > "$pkgdir/usr/bin/$pkgname"
  echo "electron /usr/share/$pkgname" >> "$pkgdir/usr/bin/$pkgname"
  chmod +x "$pkgdir/usr/bin/$pkgname"
}
